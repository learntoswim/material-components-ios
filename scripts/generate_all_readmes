usage() {
  echo "Usage: $0"
  echo
  echo "Generates all root readmes for every public component."
  echo
  echo "Example usage: $0"
}

# Add component names to this array as needed
declare -a all_components_using_new_readme_generataor=("Buttons")

find components -type d | cut -d'/' -f1-2 | sort | uniq | grep / | while read line; do
  component=$(echo "$line" | cut -d'/' -f2)
  if [ ! -f "$line/docs/README.md" ]; then
    continue
  fi

  if [ ${#all_components_using_new_readme_generataor[@]} -eq 0 ]; then
      echo "Generating legacy readme for $component..."
      ./scripts/generate_readme $component
  else
    for component_using_new_readme_generataor in "${all_components_using_new_readme_generataor[@]}"
    do
      if [ "$component_using_new_readme_generataor" = "$component" ]; then
        echo "Generating readme for $component..."
        ./scripts/generate_readme_new $component
      else
        echo "Generating legacy readme for $component..."
        ./scripts/generate_readme $component
      fi
    done
  fi
done
